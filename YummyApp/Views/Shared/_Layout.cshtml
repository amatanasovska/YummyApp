<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://nightly.datatables.net/css/dataTables.bootstrap4.min.css"/>
</head>
<body class="bg-light p-0">
    <div class="navbar navbar-fixed-top h-100 bg-white mb-5" style="border-bottom: 2px solid lightgray;">
        <div class="container" style="justify-content: center;">
            <div class="navbar-header mx-auto">
                <a href='@Url.Action("Index","Recipe")'>
                    <img src="~/Images/logo.png" style="height:100%" />
                </a>
            </div>
            <div class="mx-auto">

                @*<input class="form-control mr-sm-2" type="search" placeholder="Search for recipes" aria-label="Search">*@
                <button class="navbar-toggler btn btn-outline-success my-2 my-sm-0"
                        type="button" data-toggle="collapse" data-target="#searchField" aria-controls="searchField" aria-expanded="false" aria-label="Find recipe">
                    Find your favorite recipe!
                </button>

            </div>
            <div class="mx-auto">
                <!--<ul class="nav navbar-nav">-->
                @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
            
            <div class="collapse navbar-collapse" id="searchField">
                <hr />
                <div class="container">
                    <div class="row w-100">
                        <h3 class="col text-center my-4" style="color:darkgreen">
                            Discover recipes by type
                        </h3>
                        
                    </div>
                    <div class="row w-100 my-3">
                        <div class="col container justify-content-center">
                            @Html.ActionLink("Desserts", "ShowByCategory", "Recipe", new { categoryId = 0 }, new { @class = "btn btn-outline-success w-100"})
                        </div>
                        <div class="col container justify-content-center">
                            @Html.ActionLink("Breakfast", "ShowByCategory", "Recipe", new { categoryId = 1 }, new { @class = "btn btn-outline-success w-100" })
                        </div>
                        <div class="col container justify-content-center">
                            @Html.ActionLink("Lunch", "ShowByCategory", "Recipe", new { categoryId = 2 }, new { @class = "btn btn-outline-success w-100" })
                        </div>
                        <div class="col container justify-content-center">
                            @Html.ActionLink("Brunch", "ShowByCategory", "Recipe", new { categoryId = 3 }, new { @class = "btn btn-outline-success w-100" })
                        </div>
                        <div class="col container justify-content-center">
                            @Html.ActionLink("Dinner", "ShowByCategory", "Recipe", new { categoryId = 4 }, new { @class = "btn btn-outline-success w-100" })
                        </div>
                    </div>
                </div>
                <hr />
                @using (Html.BeginForm("SearchRecipe", "Recipe"))
                {
                    <div class="container-fluid" style="margin:20px">
                        <div class="row" style="width:100%">
                            <div class="col container">
                                <p class="m-0 text-secondary">Search for keywords, ingredients, tags:</p>
                            </div>
                            <div class="col">
                                <form class="container">
                                    <div class="row container justify-content-center">
                                        <input name="model" class="form-control" style="margin:5px;display:inline-block;width:auto;" type="search" placeholder="Search" aria-label="Search">
                                        <button class="btn btn-outline-success" type="submit">Search</button>

                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>

                }
            </div>
            </div>

    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Yummy</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")


    @RenderSection("scripts", required: false)
</body>
</html>
