@model YummyApp.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row card-deck">
        <div class="custom-card card border-dark mb-3" id="addUserToRole" style="max-width: 18rem;">
            <a class="text-reset text-decoration-none" href="@if (Model.HasPassword)
            {
                @Url.Action("ChangePassword","Manage");
            }
            else
            {
                @Url.Action("SetPassword","Manage");
            }">
                <div class="card-header font-weight-bold">Security</div>
                <div class="card-body text-dark">

                    <h5 class="card-title font-weight-bold">Change Password</h5>
                    <p class="card-text">Secure your account and change your password.</p>
                </div>
            </a>
        </div>
        <div class="custom-card card border-dark mb-3" id="externalLogins" style="max-width: 18rem;">
            <a class="text-reset text-decoration-none" href="@Url.Action("ManageLogins","Manage")">
                <div class="card-header font-weight-bold">Security</div>
                <div class="card-body text-dark">
                    <h5 class="card-title font-weight-bold">Manage External logins</h5>
                    <p class="card-text">Manage your external logins. Number of external logins for your account: @Model.Logins.Count</p>
                </div>
            </a>
        </div>
        
    </div>
